{
  "author": "Maciej Treder <contact@maciejtreder.com>",
  "description": "Angular Universal boilerplate for serverless environment. Built on top of https://github.com/FrozenPandaz/ng-universal-demo",
  "name": "angular-universal-serverless",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maciejtreder/angular-universal-serverless.git"
  },
  "scripts": {
    "lint": "tslint \"src/**/*.ts\"",
    "test": "npm run lint && karma start --single-run",
    "test:dev": "karma start",
    "postinstall": "npm run build:dll",
    "webdev": "webpack-dev-server --env.client --host 0.0.0.0",
    "start": "npm-run-all webdev build:sass:watch",
    "build:dev": "npm-run-all -p -r start test:dev",
    "build:dll": "rimraf dll && webpack --env.dll",
    "build:prod:client": "webpack --env.aot --env.client -p",
    "build:prod:server": "webpack --env.server",
    "ngsw-copy": "cp node_modules/@angular/service-worker/ngsw-worker.js dist/",
    "build:prod": "npm-run-all test build:prod:client build:sass ngsw-copy service-worker build:prod:server",
    "service-worker": "ngsw-config dist src/ngsw-manifest.json",
    "build:deploy": "npm-run-all build:prod deploy",
    "build:sass": "node-sass  --include-path node_modules --importer node_modules/node-sass-import --output-style compressed -q src/styles/main.scss > src/styles/main.css",
    "build:sass:watch": "npm run build:sass && node-sass -w --include-path node_modules --importer node_modules/node-sass-import --output-style compressed -q src/styles/main.scss > src/styles/main.css",
    "prebuild:prod": "rimraf dist",
    "server": "node local.js",
    "deploy": "serverless deploy"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "@angular-universal-serverless/external-module": "git+https://github.com/martinambrus/angular-external-module.git",
    "@angular/animations": "^5.2.3",
    "@angular/cdk": "^5.1.1",
    "@angular/common": "^5.2.3",
    "@angular/core": "^5.2.3",
    "@angular/forms": "^5.2.3",
    "@angular/http": "^5.2.3",
    "@angular/material": "^5.1.1",
    "@angular/platform-browser": "^5.2.3",
    "@angular/platform-browser-dynamic": "^5.2.3",
    "@angular/platform-server": "^5.2.3",
    "@angular/router": "^5.2.3",
    "@angular/service-worker": "^5.2.3",
    "@angularclass/hmr": "^2.1.3",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "aws-serverless-express": "3.1.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "rxjs": "^5.5.6",
    "serverless-apigw-binary": "^0.4.4",
    "typescript-collections": "^1.3.2",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/app-shell": "^0.1.0",
    "@angular/compiler": "^5.2.3",
    "@angular/compiler-cli": "^5.2.3",
    "@angularclass/hmr-loader": "^3.0.4",
    "@ngtools/webpack": "^1.9.7",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.4.0",
    "@types/systemjs": "^0.20.6",
    "add-asset-html-webpack-plugin": "^2.1.2",
    "angular-router-loader": "^0.8.2",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.4.1",
    "codelyzer": "^4.1.0",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine": "^2.9.0",
    "karma": "^2.0.0",
    "karma-jasmine": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.9",
    "ng-pwa-tools": "0.0.15",
    "node-sass": "^4.7.2",
    "node-sass-import": "^1.1.1",
    "npm-run-all": "^4.1.2",
    "optimize-js-plugin": "0.0.4",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "script-ext-html-webpack-plugin": "^1.8.8",
    "serverless": "^1.26.0",
    "sinon": "^4.2.2",
    "source-map-loader": "^0.2.3",
    "to-string-loader": "^1.1.5",
    "tslint": "^5.9.1",
    "typescript": "^2.6.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  }
}
